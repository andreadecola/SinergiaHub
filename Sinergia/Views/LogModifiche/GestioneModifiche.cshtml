    </div>
</div>

<!-- 📦 MODALE DETTAGLIO DESKTOP -->
<div class="modal fade" id="modaleDettaglioModifica" tabindex="-1" role="dialog" aria-labelledby="titoloModaleDettaglio" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title fw-semibold" id="titoloModaleDettaglio">Dettaglio Modifica</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Chiudi"></button>
            </div>
            <div class="modal-body" id="contenutoDettaglioModifica">
                <!-- Il contenuto verrà caricato via JS -->
            </div>
        </div>
    </div>
</div>
<!-- 📱 VIEW MOBILE - Dettaglio Modifica -->
<div id="viewDettaglioModificaMobile" class="d-md-none position-fixed top-0 start-0 w-100 h-100 bg-white" style="display:none; z-index:1080;">
    <!-- 🔹 HEADER -->
    <div class="bg-primary text-white d-flex align-items-center justify-content-between p-3 shadow-sm">
        <h6 class="m-0 fw-semibold">
            <i class="bi bi-clock-history me-2"></i> Dettaglio Modifica
        </h6>
        <button type="button" class="btn btn-light btn-sm" onclick="chiudiViewMobile()">
            <i class="bi bi-x-lg"></i>
        </button>
    </div>

    <!-- 🔹 BODY -->
    <div class="p-3 overflow-auto h-100" id="contenutoDettaglioModificaMobile">
        <div class="text-center text-muted py-3" id="placeholderDettaglio">
            <i class="bi bi-arrow-repeat fa-spin me-1"></i> Caricamento in corso...
        </div>
    </div>

    <!-- 🔹 FOOTER -->
    <div class="bg-light border-top p-2 text-end">
        <button type="button" class="btn btn-outline-secondary btn-sm px-3" onclick="chiudiViewMobile()">
            <i class="bi bi-x-circle me-1"></i> Chiudi
        </button>
    </div>
</div>





<script>
    $(document).ready(function () {
        $('#selectPageSizeLog').val('10');
    });

    function caricaLog() {
        const tabella = $('#filtroTabella').val();
        const testo = $('#filtroTesto').val().toLowerCase();
        const dataDa = $('#filtroDataDa').val();
        const dataA = $('#filtroDataA').val();

        if (!tabella) {
            toastr.warning("Seleziona una tabella");
            return;
        }

        $.get('/Home/GestioneModificheList', { nomeTabella: tabella }, function (html) {
            const righe = $('<div>').html(html).find('tr');
            const rows = [];

            righe.each(function () {
                const dataAttr = $(this).data('data');
                const testoRicerca = ($(this).data('ricerca') || '').toLowerCase();
                if (!dataAttr) return;

                const dataModifica = new Date(dataAttr);
                const passaTesto = testo === '' || testoRicerca.includes(testo);
                const passaDataDa = dataDa === '' || dataModifica >= new Date(dataDa);
                const passaDataA = dataA === '' || dataModifica <= new Date(dataA);

                if (passaTesto && passaDataDa && passaDataA) {
                    rows.push($(this));
                }
            });

            renderTabellaLog(rows);
        });
    }

    function renderTabellaLog(rows) {
        const tbody = $('#tabellaLog tbody');
        const listaMobile = $('#listaLogMobile');
        const paginationContainer = $('#paginazioneLog');
        let pageSize = parseInt($('#selectPageSizeLog').val()) || 10;
        let currentPage = 1;

        function renderPage() {
            tbody.empty();
            listaMobile.empty();

            const totalPages = Math.ceil(rows.length / pageSize);
            currentPage = Math.min(currentPage, totalPages);

            const start = (currentPage - 1) * pageSize;
            const end = start + pageSize;

            const pageRows = rows.slice(start, end);

            // DESKTOP
            pageRows.forEach(r => tbody.append(r));

            // MOBILE
            pageRows.forEach(r => {
                const data = $(r).data('data') || '-';
                const utente = $(r).find('td:nth-child(3)').text();
                const versione = $(r).find('td:nth-child(4)').text();
                const tipo = $(r).find('td:nth-child(5)').text();
                const dettaglioHtml = $(r).find('td:nth-child(6)').html() || ""; // 🔹 mantiene il pulsante/link HTML

                listaMobile.append(`
                    <div class="mobile-card-log">
                        <strong>${tipo}</strong>
                        <div class="small text-muted mb-1">${data} • ${utente}</div>
                        <div><b>Versione:</b> ${versione}</div>
                        <div class="mt-1 d-flex justify-content-end align-items-center">
                            ${dettaglioHtml}
                        </div>
                    </div>
                `);
            });



            // PAGINAZIONE
            paginationContainer.html('');
            const total = totalPages || 1;
            const pageInfo = $('<span>').text(`Pagina ${currentPage} di ${total}`).addClass('me-2');
            paginationContainer.append(pageInfo);

            const prevBtn = $('<button>')
                .addClass('btn btn-sm ' + (currentPage === 1 ? 'btn-secondary' : 'btn-outline-primary'))
                .text('← Indietro')
                .prop('disabled', currentPage === 1)
                .on('click', () => { currentPage--; renderPage(); });

            const nextBtn = $('<button>')
                .addClass('btn btn-sm ' + (currentPage === totalPages ? 'btn-secondary' : 'btn-outline-primary'))
                .text('Prossima →')
                .prop('disabled', currentPage === totalPages)
                .on('click', () => { currentPage++; renderPage(); });

            paginationContainer.append(prevBtn, nextBtn);
        }

        $('#selectPageSizeLog').off('change').on('change', function () {
            pageSize = parseInt($(this).val());
            currentPage = 1;
            renderPage();
        });

        renderPage();
    }

    function apriDettaglio(nomeTabella, idArchivio) {
        fetch(`/Home/DettaglioModifica?nomeTabella=${nomeTabella}&idArchivio=${idArchivio}`)
            .then(r => r.text())
            .then(html => {
                if (window.innerWidth >= 768) {
                    // 💻 DESKTOP → usa modale classica Bootstrap
                    document.getElementById("contenutoDettaglioModifica").innerHTML = html;
                    const modale = new bootstrap.Modal(document.getElementById("modaleDettaglioModifica"));
                    modale.show();
                } else {
                    // 📱 MOBILE → crea layout verticale a blocchi
                    const contenuto = document.getElementById("contenutoDettaglioModificaMobile");
                    contenuto.innerHTML = ""; // svuota

                    // Rimuove placeholder se presente
                    const placeholder = document.getElementById("placeholderDettaglio");
                    if (placeholder) placeholder.remove();

                    // 🔹 Converte il testo ricevuto in blocchi verticali
                    const righe = html.split("\n").filter(r => r.trim() !== "");
                    righe.forEach(riga => {
                        // Divide per “:” mantenendo la parte dopo come valore
                        const parts = riga.split(":");
                        const titolo = parts[0]?.trim() || "";
                        const valore = parts.slice(1).join(":").trim();

                        if (titolo || valore) {
                            const blocco = document.createElement("div");
                            blocco.classList.add("dettaglio-blocco");

                            blocco.innerHTML = `
                            <div class="etichetta">${titolo || "&nbsp;"}</div>
                            <div class="valore">${valore || "&nbsp;"}</div>
                        `;

                            if (valore.length > 100) blocco.classList.add("lungo");
                            contenuto.appendChild(blocco);
                        }
                    });

                    // Mostra la view mobile fullscreen
                    document.getElementById("viewDettaglioModificaMobile").style.display = "block";
                    document.body.style.overflow = "hidden"; // blocca scroll sotto
                }
            })
            .catch(err => {
                console.error("❌ Errore fetch:", err);
                toastr.error("Errore di comunicazione con il server.");
            });
    }

    function chiudiViewMobile() {
        const view = document.getElementById("viewDettaglioModificaMobile");
        view.style.display = "none";
        document.body.style.overflow = "auto";
    }


</script>
