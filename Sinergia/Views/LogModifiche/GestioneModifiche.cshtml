@{
    ViewBag.Title = "Gestione Modifiche";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    /* 🎨 Mobile cards */
    .mobile-card-log {
        border: 1px solid #dee2e6;
        border-radius: 10px;
        padding: 12px 14px;
        background: #fff;
        box-shadow: 0 2px 3px rgba(0, 0, 0, 0.05);
        margin-bottom: 10px;
    }

        .mobile-card-log strong {
            display: block;
            color: #0d6efd;
            font-size: 1rem;
        }

        .mobile-card-log .small {
            color: #666;
            font-size: 0.85rem;
        }

        .mobile-card-log .text-muted {
            font-size: 0.8rem;
        }

    /* 📱 Impaginazione verticale per il dettaglio mobile */
    #contenutoDettaglioModificaMobile {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        padding-bottom: 4rem;
    }

    /* Ogni sezione del dettaglio */
    .dettaglio-blocco {
        display: flex;
        flex-direction: column;
        padding: 0.75rem 1rem;
        background-color: #f8f9fa;
        border-radius: 10px;
        border: 1px solid #e0e0e0;
    }

        /* Etichetta (titolo del campo) */
        .dettaglio-blocco .etichetta {
            font-size: 0.85rem;
            color: #6c757d;
            text-transform: uppercase;
            margin-bottom: 0.25rem;
        }

        /* Valore (testo del campo) */
        .dettaglio-blocco .valore {
            font-size: 1rem;
            color: #212529;
            word-wrap: break-word;
            white-space: normal;
        }

        /* Blocchi di testo multilinea (come i Dettagli) */
        .dettaglio-blocco.lungo .valore {
            font-size: 0.9rem;
            line-height: 1.5;
            white-space: pre-wrap;
        }

    /* Footer sticky in basso */
    #viewDettaglioModificaMobile .bg-light {
        position: sticky;
        bottom: 0;
    }

</style>
