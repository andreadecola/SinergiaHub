@{
    ViewBag.Title = "Gestione Fornitori";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@section styles {
    <style>
        span[role="status"] {
            display: none !important;
        }

        .table > tbody > tr > td {
            padding: 8px;
            vertical-align: middle;
        }

        .mylabel {
            margin-bottom: 4px;
            color: #999;
            font-size: 12px;
            font-weight: 500;
        }

        /* Per larghezza orizzontale */
        .table-responsive {
            overflow-x: auto;
        }
    </style>
}

<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-building fa-fw"></i> Gestione Fornitori
            </h1>
        </div>
    </div>

    <section id="widget-grid">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget" id="wid-id-aziende" data-widget-editbutton="false" data-widget-deletebutton="false">
                    <header>
                        <h2 class="fadeInLeft animated">Lista Fornitori</h2>
                    </header>
                    <div>
                        <div class="widget-body no-padding">
                            <div id="aziendeContainer" class="table-responsive">
                                @Html.Action("GestioneAziendeList", "Utenti")  <!-- 🔵 ATTENZIONE: rimane "Utenti" il controller -->
                            </div>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>

<!-- Modale Visualizza Documenti Azienda -->
<div class="modal fade" id="documentiModal" tabindex="-1" aria-labelledby="documentiModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="documentiModalLabel">Documenti Fornitori</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Chiudi"></button>
            </div>
            <div class="modal-body" id="contenutoDocumenti">
                <!-- Caricamento documenti dinamico -->
                <div class="text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Caricamento...</span>
                    </div>
                    <p>Caricamento documenti...</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function CaricaDocumentiAzienda(idAzienda) {
        fetch('/Utenti/GetDocumentiAzienda?idAzienda=' + idAzienda)
            .then(r => r.text())
            .then(html => {
                document.getElementById('contenutoDocumenti').innerHTML = html;
                const modal = new bootstrap.Modal(document.getElementById('documentiModal'));
                modal.show();
            })
            .catch(err => {
                toastr.error("Errore durante il caricamento documenti.");
                console.error(err);
            });
    }

    function EliminaDocumento(idDocumento) {
        if (!confirm('Sei sicuro di voler eliminare questo documento?')) return;

        fetch('/Utenti/EliminaDocumentoAzienda?idDocumento=' + idDocumento, {
            method: 'POST'
        })
            .then(r => r.json())
            .then(res => {
                if (res.success) {
                    toastr.success(res.message);
                    setTimeout(() => location.reload(), 500);
                } else {
                    toastr.error(res.message);
                }
            })
            .catch(err => {
                toastr.error("Errore durante l'eliminazione.");
                console.error(err);
            });
    }

</script>