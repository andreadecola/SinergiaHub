                }
                if (!ruolo && c.Descrizione) ruolo = c.Descrizione;
                if (!ruolo) {
                    for (const key in c) {
                        if (key.startsWith("Descrizione_")) {
                            ruolo = c[key];
                            break;
                        }
                    }
                }
            } else {
                for (const key in c) {
                    if (key.startsWith("Descrizione_") || key.startsWith("Fase_")) {
                        descrizione = c[key];
                        break;
                    }
                }
                if (!descrizione && c.Descrizione) descrizione = c.Descrizione;
            }

            // 🔹 Importo
            let importo = '';
            for (const key in c) {
                if (key.startsWith("Importo_") || key.startsWith("Tariffa_")) {
                    importo = c[key];
                    break;
                }
            }
            if (!importo && c.Importo) importo = c.Importo;

            // 🔹 Tipologia
            let tipologia = '';
            for (const key in c) {
                if (key.startsWith("Tipologia_")) {
                    tipologia = c[key];
                    break;
                }
            }
            if (!tipologia && c.Categoria) tipologia = c.Categoria;

            // 🔹 Valore stimato
            let valore = '';
            for (const key in c) {
                if (key.startsWith("ValoreStimato_")) {
                    valore = c[key];
                    break;
                }
            }
            if (!valore && c.ValoreStimato) valore = c.ValoreStimato;

            // 🔹 Intestatario → preferisci il nome, fallback su ID
            let intestatario = '';
            if (c.IntestatarioNome) {
                intestatario = c.IntestatarioNome;   // ✅ Nome leggibile
            } else if (c.Intestatario) {
                intestatario = c.Intestatario;      // fallback → ID
            }

            // 🔹 Costruzione riga
            const tr = document.createElement('tr');
            tr.innerHTML = `
        <td>${i + 1}</td>
        <td>${metodo}</td>
        <td>${ruolo || descrizione || ''}</td>
        <td>${importo || ''}</td>
        <td>${tipologia || ''}</td>
        <td>${valore || ''}</td>
        <td>${intestatario || ''}</td> <!-- 👈 ora mostra Nome Cognome -->
        <td class="text-center">
            <button type="button" class="btn btn-sm btn-danger" onclick="eliminaRigaRiepilogo(${i})">🗑</button>
        </td>`;
            tbody.appendChild(tr);
        });
    }


    function eliminaRigaRiepilogo(index) {
        let cumulativo = [];
        const hidden = document.querySelector('#hiddenCompensiContainer input[name="CompensiJSON"]');
        if (hidden) cumulativo = JSON.parse(hidden.value);

        // rimuovo la riga con indice scelto
        cumulativo.splice(index, 1);

        // salvo nuovo JSON
        document.getElementById('hiddenCompensiContainer').innerHTML =
            `<input type="hidden" name="CompensiJSON" value='${JSON.stringify(cumulativo)}'>`;

        // ricostruisco riepilogo
        popolaRiepilogoCompensi(cumulativo);
    }

    function mostraCampoValoreStimato(select) {
        const tipologia = select.value;
        const valoreInput = select.closest('tr').querySelector('input[name^="ValoreStimato_"]');

        if (tipologia.startsWith('Per unità') || tipologia === 'Percentuale') {
            valoreInput.classList.remove('d-none');
            valoreInput.disabled = false;
            valoreInput.placeholder = "Inserisci unità o valore stimato";
        } else {
            valoreInput.value = '';
            valoreInput.disabled = true;
            valoreInput.classList.add('d-none');
            valoreInput.placeholder = '';
        }
    }

    function getUtentiDisponibili() {
        const utenti = [];

        // Owner
        const ownerId = $('#hiddenOwnerProfessionista').val();
        const ownerNome = $('#inputOwnerProfessionista').val();
        if (ownerId) utenti.push({ ID: ownerId, Nome: ownerNome });

        // Responsabile
        const respId = $('#selectResponsabile').val();
        const respNome = $('#selectResponsabile option:selected').text();
        if (respId) utenti.push({ ID: respId, Nome: respNome });

        // Collaboratori
        $('#collaboratoriContainer .row-collaboratore').each(function () {
            const id = $(this).find('select[name="Collaboratore"]').val();
            const nome = $(this).find('select[name="Collaboratore"] option:selected').text();
            if (id) utenti.push({ ID: id, Nome: nome });
        });

        return utenti;
    }

    function popolaSelectIntestatari(selectElement) {
        const utenti = getUtentiDisponibili();

        selectElement.innerHTML = '<option value="">-- Seleziona intestatario --</option>';
        utenti.forEach(u => {
            const opt = document.createElement("option");
            opt.value = u.ID;
            opt.textContent = u.Nome;
            selectElement.appendChild(opt);
        });
    }


