    function parseDotNetDate(jsonDate) {
        const match = /\/Date\((\d+)\)\//.exec(jsonDate);
        if (!match) return '';
        const date = new Date(parseInt(match[1]));
        return date.toISOString().split('T')[0]; // "yyyy-MM-dd"
    }

