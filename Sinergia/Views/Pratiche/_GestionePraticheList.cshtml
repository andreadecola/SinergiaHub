            else if (c.Metodo === "Giudiziale") {
                const importo = parseFloat(c.Importo) || 0;
                totale += importo;
            }
            // "A ore" escluso
        });

        const budgetInput = document.getElementById("BudgetInput");

        if (budgetInput) {
            // 🔹 formato italiano → con virgola
            budgetInput.value = totale.toFixed(2).replace('.', ',');
        }
