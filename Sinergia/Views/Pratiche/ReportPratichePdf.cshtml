@model List<Sinergia.Models.PraticaViewModel>
@{
    Layout = null;

    decimal totaleBudget = Model.Sum(m => m.Budget );
    decimal totaleCompensi = Model.Sum(m => m.TotaleCompensi );
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Report Pratiche</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 11px;
            margin: 25px;
        }

        h2 {
            text-align: center;
            margin-bottom: 5px;
        }

        .subtitle {
            text-align: center;
            font-size: 10px;
            color: #555;
            margin-bottom: 15px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th, td {
            border: 1px solid #444;
            padding: 5px 7px;
            text-align: left;
            font-size: 10px;
        }

        th {
            background-color: #f0f0f0;
            font-weight: bold;
        }

        .text-center {
            text-align: center;
        }

        .text-right {
            text-align: right;
        }

        .stato-attiva {
            color: #27ae60;
            font-weight: bold;
        }

        .stato-inattiva {
            color: #7f8c8d;
            font-weight: bold;
        }

        .stato-lavorazione {
            color: #e67e22;
            font-weight: bold;
        }

        .stato-contrattualizzazione {
            color: #2980b9;
            font-weight: bold;
        }

        .stato-conclusa {
            color: #8e44ad;
            font-weight: bold;
        }

        tfoot td {
            background-color: #fafafa;
            font-weight: bold;
        }
    </style>
</head>
<body>

    <h2>Report Pratiche</h2>

    <div class="subtitle">
        Generato il @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
    </div>

    <table>
        <thead>
            <tr>
                <th style="width:5%">ID</th>
                <th style="width:20%">Titolo</th>
                <th style="width:15%">Cliente</th>
                <th style="width:15%">Owner</th>
                <th style="width:10%">Data Creazione</th>
                <th style="width:10%">Stato</th>
                <th style="width:10%" class="text-right">Budget</th>
                <th style="width:15%" class="text-right">Tot. Compensi</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var p in Model)
            {
                string statoClasse = p.Stato?.ToLower() switch
                {
                    "attiva" => "stato-attiva",
                    "inattiva" => "stato-inattiva",
                    "in lavorazione" => "stato-lavorazione",
                    "contrattualizzazione" => "stato-contrattualizzazione",
                    "conclusa" => "stato-conclusa",
                    _ => ""
                };

                <tr>
                    <td class="text-center">@p.ID_Pratiche</td>
                    <td>@p.Titolo</td>
                    <td>@p.NomeCliente</td>
                    <td>@p.NomeOwner</td>
                    <td class="text-center">@p.DataCreazione.Value.ToString("dd/MM/yyyy")>
                    <td class="text-center @statoClasse">@p.Stato</td>
                    <td class="text-right">@((p.Budget).ToString("N2"))</td>
                    <td class="text-right">@((p.TotaleCompensi ).ToString("N2"))</td>
                </tr>
            }
        </tbody>

        <tfoot>
            <tr>
                <td colspan="6" class="text-center">Totali</td>
                <td class="text-right">@totaleBudget.ToString("N2")</td>
                <td class="text-right">@totaleCompensi.ToString("N2")</td>
            </tr>
        </tfoot>
    </table>

</body>
</html>
