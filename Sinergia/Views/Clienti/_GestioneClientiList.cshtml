<!-- Modale Nuovo/Modifica Cliente -->
<div class="modal fade" id="clienteModal" tabindex="-1" aria-labelledby="clienteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <form id="clienteForm">
            <div class="modal-content">
                <div class="modal-header  text-dark">
                    <h5 class="modal-title" id="clienteModalLabel">Nuovo Cliente</h5>
                    <button type="button" class="btn-close btn-close-dark" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <div class="container-fluid">

                        <!-- ✅ SWITCH VERSIONI (solo in modifica) -->
                        <div class="row mb-2 d-none" id="toggleVersioniWrapper">
                            <div class="col-12">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="toggleVersioni">
                                    <label class="form-check-label fw-bold" for="toggleVersioni">Mostra versione precedente</label>
                                </div>
                            </div>
                        </div>

                        <!-- ✅ FORM ATTUALE -->
                        <div class="row g-2">
                            <input type="hidden" name="ID_Cliente" id="idClienteHidden" />

                            <div class="col-md-4">
                                <label>Nome</label>
                                <input name="Nome" class="form-control form-control-sm" />
                                <small class="text-muted d-none" data-prev="Nome"></small>
                            </div>

                            <div class="col-md-4">
                                <label>Cognome</label>
                                <input name="Cognome" class="form-control form-control-sm" />
                                <small class="text-muted d-none" data-prev="Cognome"></small>
                            </div>

                            <div class="col-md-4">
                                <label>Ragione Sociale</label>
                                <input name="RagioneSociale" class="form-control form-control-sm" />
                                <small class="text-muted d-none" data-prev="Ragione Sociale"></small>
                            </div>

                            <div class="col-md-4">
                                <label>Email</label>
                                <input name="Email" type="email" class="form-control form-control-sm" />
                                <small class="text-muted d-none" data-prev="Email"></small>
                            </div>

                            <div class="col-md-4">
                                <label>Telefono</label>
                                <input name="Telefono" class="form-control form-control-sm" />
                                <small class="text-muted d-none" data-prev="Telefono"></small>
                            </div>

                            <div class="col-md-4">
                                <label>Codice Fiscale</label>

                                <input name="CodiceFiscale"
                                       maxlength="16"
                                       class="form-control form-control-sm codice-fiscale-input"
                                       oninput="this.value = this.value.toUpperCase().slice(0,16);" />

                                <small class="text-muted d-none" data-prev="Codice Fiscale"></small>
                            </div>



                            <div class="col-md-4">
                                <label>P.IVA</label>
                                <input name="PIVA" class="form-control form-control-sm" />
                                <small class="text-muted d-none" data-prev="Partita IVA"></small>
                            </div>

                            <div class="col-md-4">
                                <label>Stato</label>
                                <select name="Stato" class="form-select form-select-sm">
                                    <option value="Attivo">Attivo</option>
                                    <option value="Inattivo">Inattivo</option>
                                </select>
                                <small class="text-muted d-none" data-prev="Stato"></small>
                            </div>

                            <div class="col-md-4">
                                <label>Nazione</label>
                                <select id="Nazione" name="ID_Nazione" class="form-control"></select>
                                <small class="text-muted d-none" data-prev="Nazione"></small>
                            </div>

                            <div class="col-md-4">
                                <label>Città</label>
                                <select id="Citta" name="ID_Citta" class="form-control"></select>
                                <small class="text-muted d-none" data-prev="Citta"></small>
                            </div>

                            <div class="col-md-4">
                                <label>Indirizzo</label>
                                <input name="Indirizzo" class="form-control form-control-sm" />
                                <small class="text-muted d-none" data-prev="Indirizzo"></small>
                            </div>

                            <!-- Owner / Professionista -->
                            @if (utenteLoggato != null)
                            {
                                <div class="col-md-4" id="wrapperAssegnaProfessionista">
                                    <label>Assegna a Professionista</label>

                                    @if (utenteLoggato.TipoUtente == "Admin" || utenteLoggato.TipoUtente == "Collaboratore")
                                    {
                                        <select name="ID_Operatore" class="form-select form-select-sm" required>
                                            <option value="">-- Seleziona Professionista --</option>
                                            @foreach (var p in ViewBag.Professionisti as List<SelectListItem>)
                                            {
                                                <option value="@p.Value">@p.Text</option>
                                            }
                                        </select>
                                    }
                                    else if (utenteLoggato.TipoUtente == "Professionista")
                                    {
                                        <!-- hidden field con professionista corrente -->
                                        <input type="hidden" name="ID_Operatore" value="@( (ViewBag.Professionisti as List<SelectListItem>)?.FirstOrDefault()?.Value )" />
                                        <input type="text" class="form-control form-control-sm bg-light" value="@( (ViewBag.Professionisti as List<SelectListItem>)?.FirstOrDefault()?.Text )" readonly />
                                    }

                                    <small class="text-muted d-none" data-prev="Operatore Assegnato"></small>
                                    <input type="hidden" name="TipoOperatore" value="Professionista" />
                                </div>
                            }

                        </div>

                        <!-- NOTE  E DOCUMENTO -->
                        <div class="row mt-2">

                            <!-- NOTE -->
                            <div class="col-md-6">
                                <label>Note</label>
                                <textarea name="Note" class="form-control form-control-sm" rows="1"></textarea>
                                <small class="text-muted d-none" data-prev="Note"></small>
                            </div>

                            <!-- DOCUMENTO PDF -->
                            <div class="col-md-6">
                                <label class="fw-bold">Documento Cliente (PDF, max 8 MB)</label>

                                <!-- Upload -->
                                <input type="file"
                                       name="DocumentoPDF"
                                       id="documentoCliente"
                                       accept="application/pdf"
                                       class="form-control form-control-sm" />

                                <!-- Documento salvato -->
                                <div id="documentoEsistenteWrapper" class="mt-2 d-none">
                                    <span class="text-success fw-bold">Documento già caricato:</span>
                                    <span id="documentoClienteNome" class="ms-1 text-dark"></span>

                                    <button type="button"
                                            id="btnScaricaDocumentoCliente"
                                            class="btn btn-light border btn-sm ms-2"
                                            title="Scarica documento">
                                        <i class="fa fa-download text-danger"></i>
                                    </button>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

