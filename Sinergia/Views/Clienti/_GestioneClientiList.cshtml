        if (!window.professionistiDisponibili || window.professionistiDisponibili.length === 0) {
            toastr.warning("⚠️ Nessun professionista disponibile.");
            return;
        }

        const idx = Date.now();
        const wrapper = $(`
        <div class="d-flex align-items-center mb-2" id="profRow_${idx}">
            <select class="form-select form-select-sm me-2" name="ProfessionistiAssociati">
                <option value="">-- Seleziona Professionista --</option>
            </select>
            <button type="button" class="btn btn-sm btn-outline-danger" onclick="$('#profRow_${idx}').remove()">
                <i class="fa fa-times"></i>
            </button>
        </div>
    `);

        const select = wrapper.find("select");
        window.professionistiDisponibili.forEach(p => {
            const opt = $('<option>').val(p.ID).text(p.Nome);
            if (idPreselezionato && p.ID === idPreselezionato) opt.prop("selected", true);
            select.append(opt);
        });

        $('#listaProfessionisti').append(wrapper);
