                    } else if (utenteLoggatoTipo === "Professionista") {
                        wrapperAssegna?.classList.remove("d-none");

                        const hiddenInput = wrapperAssegna.querySelector('input[name="ID_Operatore"]');
                        if (hiddenInput) hiddenInput.value = c.ID_Operatore;

                        const textBox = wrapperAssegna.querySelector('input[readonly]');
                        if (textBox) {
                            textBox.value = c.OwnerVisualizzato || "";
                            textBox.closest('div').classList.remove('d-none');
                        }
                    } else {
                        wrapperAssegna?.classList.add("d-none");
                    }
