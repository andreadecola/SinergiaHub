@model Sinergia.Models.AvvisoParcellaViewModel

<div class="d-flex gap-1 flex-wrap">

    @* ✏️ Modifica *@
    @if (Model.PuoModificare)
    {
        <button class="btn btn-warning btn-sm"
                title="Modifica avviso"
                onclick="apriModificaAvviso(@Model.ID_AvvisoParcelle)">
            <i class="fa fa-pencil"></i>
        </button>
    }

    @* 🗑️ Elimina *@
    @if (Model.PuoEliminare)
    {
        <button class="btn btn-danger btn-sm"
                title="Elimina avviso"
                onclick="confermaEliminazioneAvviso(@Model.ID_AvvisoParcelle)">
            <i class="fa fa-trash"></i>
        </button>
    }

    @* 📄 GESTIONE AVVISO PARCELLA *@
    @if (Model.HaDocumentoCaricato)
    {
        <!-- ✅ Documento già caricato -->
        <a href="@Url.Action("ScaricaAvvisoParcella", "Pratiche", new { idAvviso = Model.ID_AvvisoParcelle })"
           class="btn btn-outline-success btn-sm"
           title="Visualizza Avviso Parcella"
           target="_blank">
            <i class="fas fa-file-pdf"></i>
        </a>
    }
    else
    {
        <!-- ⚙️ Genera / Anteprima Avviso Parcella -->
        <button class="btn btn-primary btn-sm"
                title="Genera anteprima Avviso Parcella"
                onclick="apriAnteprimaAvvisoParcella(@Model.ID_AvvisoParcelle)">
            <i class="fa fa-file-alt"></i>
        </button>
    }
</div>
