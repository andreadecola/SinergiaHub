@model List<Sinergia.Models.ProfessionistiViewModel>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Report Professionisti</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 12px;
            margin: 25px;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th, td {
            border: 1px solid #444;
            padding: 6px 8px;
            text-align: left;
        }

        th {
            background-color: #f0f0f0;
        }
    </style>
</head>
<body>
    <h2>Elenco Professionisti</h2>

    <table>
        <thead>
            <tr>
                <th style="width: 50px;">ID</th>
                <th>Nome</th>
                <th>Ragione Sociale</th>
                <th>P.IVA</th>
                <th>Codice Fiscale</th>
                <th>Email</th>
                <th>Telefono</th>
                <th style="width: 80px;">Stato</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.ID_Professionista</td>
                    <td>@p.Nome</td>
                    <td class="text-center">@(string.IsNullOrWhiteSpace(p.TipoRagioneSociale) ? "-" : p.TipoRagioneSociale)</td>
                    <td>@(string.IsNullOrEmpty(p.PartitaIVA) ? "-" : p.PartitaIVA)</td>
                    <td>@(string.IsNullOrEmpty(p.CodiceFiscale) ? "-" : p.CodiceFiscale)</td>
                    <td>@(string.IsNullOrEmpty(p.Email) ? "-" : p.Email)</td>
                    <td>@(string.IsNullOrEmpty(p.Telefono) ? "-" : p.Telefono)</td>
                    <td>@p.Stato</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>

