@model Sinergia.Models.CostoTeamViewModel

<button class="btn btn-warning btn-sm" title="Modifica" onclick="apriModificaCostoTeam(@Model.ID_AnagraficaCostoTeam)">
    <i class="fa fa-pencil"></i>
</button>

<button class="btn btn-danger btn-sm" title="Elimina" onclick="confermaEliminazioneCostoTeam(@Model.ID_AnagraficaCostoTeam)">
    <i class="fa fa-trash"></i>
</button>

<button class="btn btn-info btn-sm" title="Ricorrenza" onclick="apriModaleRicorrenzaTeam(@Model.ID_AnagraficaCostoTeam)">
    <i class="fa-solid fa-calendar-alt me-1"></i><i class="fa-solid fa-euro-sign"></i>
</button>

<button class="btn btn-success btn-sm" title="Assegna" onclick="apriAssegnaCostoTeam(@Model.ID_AnagraficaCostoTeam)">
    <i class="fa fa-user"></i>
</button>

@if (Model.NumeroDistribuzioni > 0)
{
    <button class="btn btn-sm btn-primary" title="Visualizza assegnati" onclick="apriDettaglioTeam(@Model.ID_AnagraficaCostoTeam)">
        <i class="fa fa-users"></i>
    </button>
}
