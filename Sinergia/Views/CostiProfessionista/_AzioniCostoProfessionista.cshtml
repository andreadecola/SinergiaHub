@model Sinergia.Models.CostoProfessionistaCompletoViewModel

<button class="btn btn-warning btn-sm" title="Modifica" onclick="apriModificaCosto(@Model.ID_AnagraficaCostoProfessionista)">
    <i class="fa fa-pencil"></i>
</button>

<button class="btn btn-danger btn-sm" title="Elimina" onclick="confermaEliminazioneCosto(@Model.ID_AnagraficaCostoProfessionista)">
    <i class="fa fa-trash"></i>
</button>

<button class="btn btn-info btn-sm" title="Ricorrenza" onclick="apriModaleRicorrenza(@Model.ID_AnagraficaCostoProfessionista)">
    <i class="fa-solid fa-calendar-alt me-1"></i><i class="fa-solid fa-euro-sign"></i>
</button>

<button class="btn btn-success btn-sm" title="Assegna" onclick="apriAssegnaProfessionisti(@Model.ID_AnagraficaCostoProfessionista)">
    <i class="fa fa-user"></i>
</button>

@if (Model.NumeroAssegnati > 0)
{
    <button class="btn btn-sm btn-primary" title="Visualizza assegnati" onclick="apriDettaglioProfessionisti(@Model.ID_AnagraficaCostoProfessionista)">
        <i class="fa fa-users"></i>
    </button>
}

